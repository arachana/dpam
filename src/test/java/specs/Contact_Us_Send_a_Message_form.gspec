#Declaring objects with css and xpath locators
@objects
  
  contact_us_send_a_message_heading xpath //*[text()='Send us a Message']
  contact_us_drop_downs-*  xpath (//*[@class='filter-option'])[position()<6]
  contact_us_text_boxes-* xpath (//*[@type='text'])[position()>1]
  contact_us_capcha_section xpath (//*[@class='recaptcha']//following::iframe)[1]
  contact_us_comment_box_desktop  xpath (//*[@name='Comment'])[1]
  contact_us_comment_box_mobile  xpath (//*[@name='Comment'])[2]
  contact_us_terms_and_condition_text xpath //*[@class='styled-checkbox' and @name='Policy']//following::label[position()=1]
  contact_us_send_a_message_button  xpath //*[@id='btn-validate']

  
= Contact Us Form section Desktop =
  #This is for Desktop
	@on desktop
      contact_us_drop_downs-1:
        width 473 px
        height 57 px
        inside screen 83px left
        inside screen 777px right
        aligned vertically all contact_us_drop_downs-2
        aligned vertically all contact_us_drop_downs-5
        aligned vertically left contact_us_drop_downs-3
        aligned vertically left contact_us_drop_downs-4  
      contact_us_send_a_message_heading:
        css font-size is "80px"
        css font-family matches ".*MarselisPro-Bold, sans-serif*"
        text is "Send us a Message"
        #inside contact_us_testimonial_section
      contact_us_drop_downs-2:
        width 473 px
        height 57 px
        inside screen 83px left
        inside screen 777px right
        aligned vertically left contact_us_drop_downs-3
        aligned vertically left contact_us_drop_downs-4
      contact_us_drop_downs-5:
        width 473 px
        height 57 px
        inside screen 83px left
        inside screen 777px right
        aligned vertically left contact_us_drop_downs-3
        aligned vertically left contact_us_drop_downs-4
      contact_us_text_boxes-1:
        width 373 px
        height 58 px
        aligned vertically right contact_us_text_boxes-3
      contact_us_text_boxes-2:
        width 473 px
        height 58 px
      contact_us_text_boxes-3:
        width 373 px
        height 58 px
      contact_us_capcha_section:
        width 304 px
        height 78 px
      contact_us_comment_box_desktop:
        width 473 px
        height 120 px
        aligned vertically left contact_us_capcha_section
      contact_us_terms_and_condition_text:
        css font-size is "15px"
        css font-family matches ".*DIN-Alternate, sans-serif*"
        text is "I have read and I agree to the Privacy Policy"
        #inside contact_us_testimonial_section
      contact_us_send_a_message_button:
        width 241 px
        height 62 px
        css font-size is "18px"
        css font-family matches ".*MarselisPro-Bold, sans-serif*"
        text is "Send Message"
